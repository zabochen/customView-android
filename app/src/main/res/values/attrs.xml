<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Circle View -->
    <declare-styleable name="CircleView">
        <attr name="align_center" format="boolean" />
        <attr name="backgroundColor" format="color" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <!-- Avatar: ImageView -->
    <declare-styleable name="AvatarImageView">
        <attr name="aiv_borderColor" format="color" />
        <attr name="aiv_borderWidth" format="dimension" />
        <attr name="aiv_initials" format="string" />
    </declare-styleable>

</resources>