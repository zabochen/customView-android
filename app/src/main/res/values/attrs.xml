<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Circle View -->
    <declare-styleable name="CircleView">
        <attr name="align_center" format="boolean" />
        <attr name="backgroundColor" format="color" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <!-- Avatar Mask: ImageView -->
    <declare-styleable name="AvatarMaskImageView">
        <attr name="amiv_borderWidth" format="dimension" />
        <attr name="amiv_borderColor" format="color" />
        <attr name="amiv_initials" format="string" />
    </declare-styleable>

    <!-- Avatar Shader: ImageView -->
    <declare-styleable name="AvatarShaderImageView">
        <attr name="asiv_borderWidth" format="dimension" />
        <attr name="asiv_borderColor" format="color" />
        <attr name="asiv_initials" format="string" />
    </declare-styleable>

</resources>